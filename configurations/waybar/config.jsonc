// -*- mode: jsonc -*-
{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    "height": 30, // Waybar height (to be removed for auto height)
    "width": 840, // Waybar width
    "spacing": 4, // Gaps between modules (4px)
    "margin-top":5, // Margin from top
    // Choose the order of the modules
    "modules-left": [
        "cpu",
        "memory"
    ],
    "modules-center": [
        // "sway/window"
        "hyprland/workspaces"
    ],
    "modules-right": [
        // "mpd",
        // "idle_inhibitor",
        // "pulseaudio",
        "network",
        // "power-profiles-daemon",
        // "temperature",
        "backlight",
        // "keyboard-state",
        // "sway/language", 
        "battery",
        // "battery#bat2",
        "clock"
        // "tray",
        // "custom/power"
    ],
    // Modules configuration
    "hyprland/workspaces": {
        "disable-scroll": true,
